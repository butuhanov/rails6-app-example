<h2 style="color:red; margin 0 auto">Show item</h2>

<h4>  <%= @item.name %> </h4>

<ul>
  <li>Price: <%= @item.price %> $</li>
  <li>Weight: <%= @item.weight %> kg</li>
  <li>Description: <%= @item.description %></li>
</ul></br>

<%= button_to "edit #{@item.name}", edit_item_path, method: :get %>
