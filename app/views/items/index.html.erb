<h2 style="color:red; margin 0 auto">All items</h2>
<% unless @items.empty? %>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Rating</th>
    <th>Delete</th>

  </tr>

<% @items.sort.each do |item| %>
  <tr>
    <td><%= item.id %> </td>
    <td><%= link_to item.name, item_path(item) %></td>
    <td><%= item.price %></td>
    <td><%= urls_to_content(item.description) %></td>
    <td><%= item.votes_count %>, <%= link_to '+', upvote_item_path(item) %></td>
    <td><%= button_to 'delete', item_path(item), method: :delete %></td>
  </tr>
<% end %>

</table>

<br/>
<%= button_to 'new item', new_item_path, method: :get %>
<%= button_to 'expensive', expensive_items_path, method: :get %>
<%= button_to 'all', items_path, method: :get %>
<% else %>
  <h2 style="color:green; margin 0 auto">No items</h2>
  <%= button_to 'new item', new_item_path, method: :get %>
<% end %>

<%= render partial: 'shared/email' %>