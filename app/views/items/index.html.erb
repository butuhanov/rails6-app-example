<h2 style="color:red; margin 0 auto">All items</h2>

<table>
  <tr>
    <th>item id</th>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Delete</th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.id %> </td>
    <td><%= link_to item.name, item_path(item) %></td>
    <td><%= item.price %></td>
    <td><%= item.description %></td>
    <td><%= button_to 'delete', item_path(item), method: :delete %></td>
  </tr>
<% end %>

</table>

<br/>
<%= link_to 'new item', new_item_path %>
