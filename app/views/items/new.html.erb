<h2 style="color:red; margin: 0 auto">Create new item</h2>
<!-- Способ 1 -->
<form action="/items" method="post">
  <input type=text name="name">
  <input type=text name="price">
  <input type=text name="description">
  <input type=submit>
</form>

<!-- Способ 2 -->
<%= form_tag items_path, method: :post do %>
<%= label_tag :name %>
<%= text_field_tag :name %>
<%= label_tag :price %>
<%= text_field_tag :price %>
<%= label_tag :description %>
<%= text_field_tag :description %>
<%= submit_tag "Save", class: "btn btn-large btn-primary" %>
<% end %>

<!-- Способ 3 С использованием Simple Form -->
<%= simple_form_for @item do |f| %>
  <%= f.input :name, label: "Name", input_html: {class: "form-text"} %>
  <%= f.input :price, label: "Price" , input_html: {class: "form-text"}  %>
  <%= f.input :description, label: "Description", input_html: {class: "form-text"}   %>
  <%= f.button :submit, class: "btn-primary" %>

<% end %>

